<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".UserDetailsActivity"
    android:padding="12sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!-- Profile Photo -->
        <ImageView
            android:id="@+id/profilePhotoImageView"
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="200sp"
            android:src="@mipmap/person" />
        <!-- basic details -->
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginBottom="24sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_details"
            android:textSize="36sp"
            android:textStyle="bold"
            android:paddingBottom="12sp"/>
        <!-- First Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5sp"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="2sp"
            android:background="@drawable/border_background">
        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textStyle="bold"/>

            <View
                android:layout_width="2sp"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:background="?android:attr/listDivider" />

            <TextView
            android:id="@+id/firstNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/test"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Last Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">
        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textStyle="bold"
            android:layout_marginTop="12sp" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/lastNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>
        <!-- Phone no -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="@string/phone_no"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/phoneNoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>
        <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center"/>
    </LinearLayout>

        <!-- Gender -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textStyle="bold"/>

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>
        <!-- education details -->
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginBottom="24sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/education_details"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="center" />

        <!-- Education Details -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">
        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/education_details"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/educationDetailsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>
        <!-- Year of passing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/year_of_passing"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/passingYearTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>
        <!-- Grade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/grade"
            android:textStyle="bold"
            android:paddingBottom="12sp"/>

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/gradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

        <!-- Experience -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/experience"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/experienceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

        <!-- Designation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/designation"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/designationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

        <!-- Domain -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/domain"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/domainTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

        <!-- address details -->
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginBottom="24sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_details"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="center"
            android:paddingBottom="12sp"/>

        <!-- Address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

        <!-- Landmark -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/landmark"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/landmarkTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

        <!-- City -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/cityTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

        <!-- State -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/state"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/stateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

        <!-- Pin code -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/border_background">

        <TextView
            android:layout_width="200sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/pin_code"
            android:textStyle="bold" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/pinCodeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test"
            android:textAlignment="center" />
    </LinearLayout>

    </LinearLayout>

</ScrollView>